% Generates text from a large body of descriptions using ML

fileID = fopen("descriptions.txt","r");

str = fscanf(fileID,'%c');

generate(str);

function y = generate(str)
descriptions = split(lower(str), ",");

descOne = descriptions(0);
words = descOne

[~,wordID, count] = unique(descriptions);

n = accumarray(count,1);

y = horzcat(num2cell(n), descriptions(wordID)) %n occurences for each word


end